<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Logo at the Top -->
                <ImageView
                    android:id="@+id/headerLogo"
                    android:layout_width="55dp"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/logodark" />

                <!-- Title Text -->
                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headerLogo"
                    android:text="@string/headerTitle"
                    android:textColor="@color/blue_four"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/headerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headerTitle"
                    android:text="@string/headerSubtitle"
                    android:textColor="@color/blue_four"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="63dp"
                    android:layout_height="66dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image" />
            </RelativeLayout>

            <!-- Expanded Search EditText -->
            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/searchEditText"
                android:padding="8dp"
                android:background="@color/blue_three"
                android:textSize="16sp" />

            <!-- Trending Topics -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/topicContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Dynamic Topics Container -->
            <LinearLayout
                android:id="@+id/dynamicTopicsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/btnClearFilter"
                    android:layout_width="wrap_content"
                    android:text="@string/clear_filter"
                    android:background="@color/blue_one"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button for Adding Discussion -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddDiscussion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/add"
        app:tint="#FFFFFF"
        android:backgroundTint="@color/blue_one" />
</RelativeLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <!-- Close Button -->
            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_close"
                android:contentDescription="Close" />

            <!-- Title -->

            <!-- Like Button -->
            <TextView
                android:id="@+id/postTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Post"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Post Content Section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Tags -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:background="#989DA4"
                    android:text="TAG"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:background="#989DA4"
                    android:text="TAG"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/likeButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fav"
                    android:contentDescription="Like" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Post Description -->
            <TextView
                android:id="@+id/postDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text..."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/readMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:textColor="@color/blue_three"
                android:textSize="14sp"
                android:paddingTop="4dp" />

            <!-- Media -->
            <ImageView
                android:id="@+id/postMedia"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_media" />
        </LinearLayout>

        <!-- AI Answer Section -->
        <Button
            android:id="@+id/aiAnswerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Answer"
            android:textSize="16sp"
            android:backgroundTint="@color/blue_four"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

        <!-- Replies Section -->
        <TextView
            android:id="@+id/repliesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Replies"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/repliesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Each Reply Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <!-- User Avatar -->
                <ImageView
                    android:id="@+id/userAvatar "
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image"
                    android:layout_marginEnd="8dp" />

                <!-- Reply Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/replyUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USER - 1hr ago"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/replyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is simply dummy text..."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Reply and Like Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/likeCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:drawableLeft="@drawable/thumbs_up"
                            android:drawablePadding="4dp"
                            android:textSize="12sp"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/replyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textSize="12sp"
                            android:textColor="@color/blue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

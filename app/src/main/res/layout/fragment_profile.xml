<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- UserProfile Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/UserProfile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="64dp"
                android:layout_width="300dp"
                android:layout_height="100dp">

                <!-- Profile Picture -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/colorOnSecondary"
                    android:src="@drawable/baseline_person_24"/>

                <!-- User Name -->
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSecondary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/profilePic"/>

                <!-- University -->
                <TextView
                    android:id="@+id/university"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asal_universitas"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/userName"
                    app:layout_constraintStart_toEndOf="@id/profilePic"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/to_settings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_settings_24"
                app:tint="?colorOnSecondary"
                android:contentDescription="@string/settings_icon"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Stats Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statsSection"
                android:layout_width="312dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/UserProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <!-- Posts Count -->
                <TextView
                    android:id="@+id/postsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/posts"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_bold"/>

                <!-- Posts Replies -->
                <TextView
                    android:id="@+id/postsReplies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replies"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_bold"/>

                <!-- Posts Votes -->
                <TextView
                    android:id="@+id/postsVotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/votes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Recent Posts Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recentPostsSection"
                app:layout_constraintTop_toBottomOf="@id/statsSection"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background">

                <!-- Recent Posts Title -->
                <TextView
                    android:id="@+id/recentPostsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recent_posts"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"/>

                <!-- RecyclerView for Recent Posts -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentPostsRecyclerView"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/recentPostsTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>

                <!-- Saved Posts Title -->
                <TextView
                    android:id="@+id/savedPostsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saved_posts"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/recentPostsRecyclerView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"/>

                <!-- RecyclerView for Saved Posts -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/savedPostsRecyclerView"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/savedPostsTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
